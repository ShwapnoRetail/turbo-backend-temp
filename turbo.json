{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "globalEnv": ["JWT_SECRET", "JWT_EXPIRATION", "DATABASE_URL"],
    "tasks": {
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false,
            "persistent": true
        },
        "db:deploy": {
            "cache": false
        },
        "build": {
          "dependsOn": ["^build", "^db:generate"],
          "inputs": ["$TURBO_DEFAULT$", ".env*"],
          "outputs": ["dist/**", "!.turbo/**"], 
          "env": ["DATABASE_URL"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "dependsOn": ["^dev", "db:generate"],
            "cache": false,
            "persistent": true
        }
    }
}
